<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView android:id="@+id/img1" android:src="@android:drawable/ic_menu_call"
        android:layout_width="30dp" android:layout_height="30dp"
        android:layout_alignParentLeft="true" android:layout_marginLeft="40dp"/>
    <TextView android:id="@+id/tv1" android:text="Cuộc gọi"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/img1" android:layout_alignLeft="@id/img1"/>

    <ImageView android:id="@+id/img2" android:src="@android:drawable/ic_menu_camera"
        android:layout_width="30dp" android:layout_height="30dp"
        android:layout_centerHorizontal="true"/>
    <TextView android:id="@+id/tv2" android:text="Camera"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/img2" android:layout_centerHorizontal="true"/>

    <ImageView android:id="@+id/img3" android:src="@android:drawable/ic_menu_mapmode"
        android:layout_width="30dp" android:layout_height="30dp"
        android:layout_alignParentRight="true" android:layout_marginRight="40dp"/>
    <TextView android:text="Bản đồ"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/img3" android:layout_alignRight="@id/img3"/>

</RelativeLayout>